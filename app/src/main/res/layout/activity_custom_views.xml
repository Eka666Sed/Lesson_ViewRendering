<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.yandex.practicum.sample.customviews.CustomViewsActivity">

    <com.yandex.practicum.sample.customviews.views.CustomPolylineView
        android:id="@+id/customPolylineViewWrapContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <com.yandex.practicum.sample.customviews.views.CustomPolylineView
        android:id="@+id/customPolylineViewAtMost50dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp" />

    <com.yandex.practicum.sample.customviews.views.CustomPolylineView
        android:id="@+id/customPolylineViewAtMost200dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp" />

</LinearLayout>